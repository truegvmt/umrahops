{
    "compilerOptions": {
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false
    },
    "include": [
        "server/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}