{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false,
        "noEmit": false
    },
    "include": [
        "server/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}